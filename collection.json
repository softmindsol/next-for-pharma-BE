{
  "info": {
    "name": "CMS API (Hardcoded Admin)",
    "_postman_id": "cms-backend-123",
    "description": "APIs for CMS with single hardcoded admin",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "host": ["http://localhost:5000"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"admin@test.com\",\n    \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Get Home Page",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/api/pages/home",
          "host": ["http://localhost:5000"],
          "path": ["api", "pages", "home"]
        }
      }
    },
    {
      "name": "Update Home Page",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/pages/home",
          "host": ["http://localhost:5000"],
          "path": ["api", "pages", "home"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sections\": {\n    \"whatNext\": {\n      \"title\": \"What’s Next for Pharma?\",\n      \"subtitle\": \"Updated Subtitle\",\n      \"image\": \"/home/insightsMap.svg\"\n    },\n    \"insights\": {\n      \"title\": \"What’s New? Newsletters & Insights\",\n      \"paragraph\": \"Updated via CMS.\",\n      \"imageLeft\": \"/home/dna.png\",\n      \"imageRight\": \"/home/chess.png\",\n      \"button\": { \"text\": \"Newsletter Home\", \"href\": \"https://linkedin.com\" }\n    }\n  }\n}"
        }
      }
    }
  ]
}
